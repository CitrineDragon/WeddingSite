---
  import { getCollection } from "astro:content";
  import { CldImage } from 'astro-cloudinary';

  const animals = await getCollection('animals')
  console.log(animals.length);
---

<div class="image-gallery">
  {animals.map(animal =>  {
    const link = animal.data.secure_url;
    return (
      <a 
      href={link}
      target="blank"
      >
        <CldImage 
        src={animal.data.public_id} 
        crop="auto"
        alt="wedding photo"
        class="responsive-image"
        />
      </a>
    )
  })}
</div>

<style>
  .image-gallery {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    padding: 3rem 0;
  }

  .responsive-image {
    display: flex;
    max-width: 350px;
    width: 100%;
    height: auto;
    aspect-ratio: 1;
    flex: 1 1 300px;
    object-fit: cover;
    border-radius: 5px;
    justify-content: center;
    align-items: center;
  }
</style>

