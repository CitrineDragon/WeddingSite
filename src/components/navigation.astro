<div class="navbar" id="navbar">
  <a href="/" >Home</a>

  <!-- Dropdown for Photos with click functionality -->
  <div class="dropdown" id="photo-dropdown">
    <span class="nav-link" onclick="toggleDropdown()">Photos</span>
    <div class="dropdown-content" id="dropdown-content">
      <a href="/photosWedding/" class="link">Wedding</a>
      <!-- <a href="/photosEngagement/">Engagement</a> -->
      <a href="/photosAnimals/" class="link">Animals</a>
      <a href="/photosDragons/" class="link">Dragons</a>
    </div>
  </div>

  <a href="/rsvp/">RSVP</a>
</div>


<style>
  /* Navbar Style */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  height: 3rem;
  padding: 1rem;
  background-color: white;
  border-bottom: 1px solid #ccc;
  justify-content: center;
  align-items: center;
  gap: 2rem;
  z-index: 1000;
  transition: transform 0.3s ease;
}

/* ðŸ‘‡ Hidden when scrolling down */
.navbar.hidden {
  transform: translateY(-100%);
}

/* General Link Style */
a,
span {
  color: black;
  font-family: 'Tangerine', cursive;
  font-size: 2rem;
  font-weight: 400;
  font-style: normal;
}

a {
  text-decoration: none;
  cursor: pointer;
  font-weight: 500;
}

/* Dropdown Styles */
.dropdown {
  position: relative;
  display: inline-block;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color: white;
  min-width: 120px;
  box-shadow: 0 12px 12px rgba(0,0,0,0.5);
  z-index: 1;
  flex-direction: column;  
}

.dropdown-content a {
  padding: .8rem 1rem;
  text-decoration: none;
  display: block;
  color: #333;
  border-bottom: 1px solid #ccc
}

.dropdown-content a:hover {
  background-color: black;
  color: white;
}

</style>

<script is:inline>
  // Toggle the dropdown visibility on click (Photos link)
  function toggleDropdown() {
    const dropdownContent = document.getElementById('dropdown-content');
    const isVisible = dropdownContent.style.display === 'block';

    // If it's visible, hide it; if not, show it
    dropdownContent.style.display = isVisible ? 'none' : 'block';
  }

  // Close the dropdown if user clicks outside of the dropdown
  document.addEventListener('click', function(event) {
    const dropdown = document.getElementById('photo-dropdown');
    const dropdownContent = document.getElementById('dropdown-content');

    // If the click happened outside of the dropdown, close it
    if (!dropdown.contains(event.target)) {
      dropdownContent.style.display = 'none';
    }
  });

  let lastScrollY = window.scrollY;
  const navbar = document.getElementById('navbar');

  window.addEventListener('scroll', () => {
    const currentScrollY = window.scrollY;

    if (currentScrollY > lastScrollY) {
      // Scrolling down
      navbar.classList.add('hidden');
    } else {
      // Scrolling up
      navbar.classList.remove('hidden');
    }

    lastScrollY = currentScrollY;
  });
</script>
