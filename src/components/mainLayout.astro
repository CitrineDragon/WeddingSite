---
  interface Props {
    title: string;
  }

  const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&family=Tangerine:wght@400;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
    <div>
      <slot />
    </div>
  </body>
  </html>


  <style>
    body {
      max-width: 1200px;
      padding: 1rem;
      margin: 0 auto;

    }

  </style>
